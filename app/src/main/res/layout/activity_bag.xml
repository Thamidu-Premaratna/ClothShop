<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BagActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:orientation="vertical">

        <!-- Row to hold the back button and the View Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="20dp"
            android:paddingHorizontal="30dp"
            android:elevation="2dp"
            android:weightSum="3">

            <ImageView
                android:id="@+id/bagBackButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_arrow_back_24"
                android:layout_weight="0"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/bagViewTitle"
                android:fontFamily="sans-serif"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/gray_icons"
                android:layout_weight="3"
                android:gravity="end"/>
        </LinearLayout>

        <!-- Scroll view for the bag/cart items -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingHorizontal="30dp"
                android:paddingVertical="10dp">

                <!-- Adding a card ( 1 card = 1 item that has been added to the bag ) -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    app:cardCornerRadius="16sp"
                    app:cardBackgroundColor="@color/button_gray_color1"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:padding="20dp"
                        android:layout_gravity="left">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="150dp"
                            android:layout_weight="0"
                            android:src="@drawable/red_dress_1" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:orientation="vertical"
                            android:padding="10dp">

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>